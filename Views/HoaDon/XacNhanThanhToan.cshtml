
@{
    ViewBag.Title = "XacNhanThanhToan";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a href="@Url.Action("Index","Admin")">Admin</a>
    </li>
    <li class="breadcrumb-item active">Kết quả</li>
</ol>
@{
    if (ViewBag.result == "success")
    {
        <div class="alert alert-success" role="alert">
            <h2 style="color:#3c763d">Đã hoàn tất thanh toán.</h2>
        </div>
        <div class="alert alert-warning" role="alert"> Phòng được chuyển sang trạng thái dọn phòng! Hay thay đổi trạng thái của phòng sau khi dọn phòng xong !</div>
    }
    else
    {
        <div class="alert alert-danger" role="alert">Có lỗi !<br />@ViewBag.r</div>
    }
}
