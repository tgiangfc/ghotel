@model QLKS.Models.tblPhieuDatPhong

@{
    ViewBag.Title = "Nhận Phòng";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a href="@Url.Action("Index","Admin")">Admin</a>
    </li>
    <li class="breadcrumb-item active">Thông tin phiếu đặt phòng</li>
</ol>
<div class="container">

    @using (Html.BeginForm("Result", "HoaDon"))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.ma_tgd)
        @Html.HiddenFor(model => model.ma_kh)
        @Html.HiddenFor(model => model.ma_phong)
        <div class="form-horizontal">
            <h4>Phiếu đặt phòng</h4>
            <hr />
            <div class="form-group">
                @Html.Label("Họ tên", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(u => u.tblKhachHang.ho_ten, null, new { @class = "form-control", @readonly = "readonly" })
                </div>
            </div>
            @if (Model.ngay_dat != null)
            {
                <div class="form-group">
                    @Html.Label("Ngày đặt", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(u => u.ngay_dat, null, new { @class = "form-control", @readonly = "readonly" })
                    </div>
                </div>
            }
            <div class="form-group">
                @Html.Label("Ngày vào", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(u => u.ngay_vao, null, new { @class = "form-control", @readonly = "readonly" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Ngày ra", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(u => u.ngay_ra, null, new { @class = "form-control", @readonly = "readonly" })
                </div>
            </div>
            <div class="form-group">
                @Html.Label("Số phòng", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(u => u.tblPhong.so_phong, new { @class = "form-control", @readonly = "readonly" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Nhận phòng" class="btn btn-success btn-lg" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Back to Home", "Index")
    </div>
</div>